#!/usr/bin/env bash
# Creates a PID file, loops forever, handles signals, and cleans up on exit

PID_FILE="/var/run/myscript.pid"

# Write PID to file
echo $$ > "$PID_FILE"

# SIGTERM handler
sigterm_handler() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# SIGINT handler (Ctrl+C)
sigint_handler() {
    echo "Y U no love me?!"
}

# SIGQUIT handler
sigquit_handler() {
    rm -f "$PID_FILE"
    exit 0
}

trap sigterm_handler SIGTERM
trap sigint_handler SIGINT
trap sigquit_handler SIGQUIT

while true
do
    echo "To infinity and beyond"
    sleep 2
done

